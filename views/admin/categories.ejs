<%-include("../_layouts/adminheader")%>

<h2 class="page-title">Categories</h2>
<a href="/admin/categories/add-category" class="btn btn-primary" role="button">Add category</a>
<br><br>

<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        
        <% categories.forEach(function(cat){%>
            <tr>
                <td><%= cat.title %></td>
                <td><a href="/admin/categories/edit-category/<%=cat.title%>">Edit</a></td>
                <td><a class="confirmDeletion" href="/admin/categories/delete-category/<%=cat._id%>">Delete</a></td>
            <tr>
        <% }); %>
        
    </tbody>

</table>

<%-include("../_layouts/adminfooter")%>