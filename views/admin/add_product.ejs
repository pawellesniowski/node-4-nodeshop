<%-include('./../_layouts/adminheader')%>
<h2>Add product</h2>
<a href="/admin/products" class="btn btn-primary" role="button">Back to products</a>
<br><br>

<form method="post" action="/admin/products/add-product" anctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="title" value="<%=title%>" placeholder="Title">
        
        <label for="description">Description</label>
        <textarea cols="30" rows="10" class="form-control" type="text" name="description" placeholder="Description"><%=description%></textarea>
        
        <label for="category">Category</label>
        <select name="category" class="form-control">

            <% categories.forEach(function(category){ %>
                    <option value="<%=category.title%>"><%=category.title%></option>
            <% }); %>

        </select>
        
        <label for="price">Price</label>
        <input class="form-control" type="number" name="price" value="<%=price%>" placeholder="Price">
        
        <label for="image">Image</label>
        <input type="image" class="form-control" name="image" id="img">
        <img src="#" id="imgPreview" alt="preview of added product">

    </div>
    <button class="btn btn-success">Add product</button>
</form>

<script>

    function readURL(input){
        console.log("jeden");
        if(input.files && input.files[0]){
            let reader = new FileReader();
            reader.onload = function(e){
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            } // end of reader.onload
            reader.readAsDataURL(input.files[0]);
        } // end of if
    } //end of function readURL

    $("#img").change(function(){
        readURL(this);
    });

</script>

<%-include('./../_layouts/adminfooter')%> 